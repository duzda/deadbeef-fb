pkgname=@PACKAGENAME@@PACKAGEFLAG@
pkgver=@PACKAGEVER@
pkgrel=@PACKAGEREL@
pkgdesc="A filebrowser plugin for the DeaDBeeF audio player"
arch=('any')
url="https://gitlab.com/zykure/deadbeef-fb"
license=(GPL)
depends=('deadbeef>=0.6', @PACKAGEDEPS@)
backup=()
source=('https://gitlab.com/zykure/deadbeef-fb/raw/release/source/deadbeef-fb_@PACKAGEVER@_src.tar.gz')
md5sums=('@MD5SUM@')
sha1sums=('@SHA1SUM@')
sha256sums=('@SHA256SUM@')

build() {
  cd ${srcdir}/deadbeef-fb-devel
  ./configure --prefix=/usr @PACKAGECONFIG@
  make
}

package() {
  cd ${srcdir}/deadbeef-fb-devel
  make DESTDIR="$pkgdir" install
}

